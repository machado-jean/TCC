{
    // Caminho padrão para o Python do ambiente virtual
    "python.defaultInterpreterPath": ".\\tcc_env\\Scripts\\python.exe",

    // Não precisa da ativação automática do VSCode, pois ativamos via terminal
    "python.terminal.activateEnvironment": false,

    // Configuração do terminal integrado para PowerShell ativar automaticamente o ambiente
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "icon": "terminal-powershell",
            "args": [
                "-NoExit",
                "-Command",
                "& { . '.\\tcc_env\\Scripts\\Activate.ps1' }"
            ]
        }
    },

    // Define o perfil padrão do terminal como PowerShell
    "terminal.integrated.defaultProfile.windows": "PowerShell",

    // Boas práticas para ocultar pastas desnecessárias
    "files.exclude": {
        "**/__pycache__": true
    },

    // Configurações específicas para Python: formatação e estilo
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.rulers": [
            200
        ],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.formatOnType": true
    },

    // Configurações de análise de tipo e sugestões do Python
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoSearchPaths": true,
    "python.analysis.useLibraryCodeForTypes": true,
    "python.languageServer": "Pylance",

    // Salvamento automático e estilo de edição
    "files.autoSave": "onFocusChange",
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.folding": true,
    "editor.foldingStrategy": "indentation",

    // Sugestões rápidas de código
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },

    // Padrão de seleção nas sugestões
    "editor.suggestSelection": "first"
}